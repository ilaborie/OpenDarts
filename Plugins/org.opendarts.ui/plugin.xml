<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            id="opendarts.cmd.newSet"
            name="New Set">
      </command>
      <command
            id="opendarts.cmd.fullscreen"
            name="FullScreen">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:false"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="opendarts.cmd.newSet"
                  label="New Game..."
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Quit"
                  style="push">
            </command>
         </menu>
         <menu
               label="Options">
            <command
                  commandId="opendarts.cmd.fullscreen"
                  label="Full Screen"
                  style="toggle">
            </command>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences ..."
                  style="push">
            </command>
         </menu>
         <menu
               label="?">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About ..."
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="opendarts.toolbar.file"
               label="File">
            <command
                  commandId="opendarts.cmd.newSet"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
         </toolbar>
         <toolbar
               id="opendarts.toolbar.game"
               label="Game">
         </toolbar>
         <toolbar
               id="opendarts.toolbar.display"
               label="Display">
            <command
                  commandId="opendarts.cmd.fullscreen"
                  label="Full Screen"
                  style="toggle">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.opendarts.ui.handler.NewSetHandler"
            commandId="opendarts.cmd.newSet">
      </handler>
      <handler
            class="org.opendarts.ui.handler.FullScreenHandler"
            commandId="opendarts.cmd.fullscreen">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="opendarts.cmd.newSet"
            icon="icons/actions/plus.png">
      </image>
      <image
            commandId="org.eclipse.ui.file.exit"
            icon="icons/actions/quit.png">
      </image>
      <image
            commandId="opendarts.cmd.fullscreen"
            icon="icons/actions/fullscreen.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="opendarts.cmd.newSet"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+G">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.opendarts.ui.pref.GeneralPreferencesPage"
            id="opendarts.pref.ui.general"
            name="General">
      </page>
      <page
            category="opendarts.pref.ui.general"
            class="org.opendarts.ui.pref.GeneralColorPreferencesPage"
            id="opendarts.pref.ui.general.colors"
            name="Colors">
      </page>
      <page
            category="opendarts.pref.ui.general"
            class="org.opendarts.ui.pref.GeneralFontPreferencesPage"
            id="opendarts.pref.ui.general.font"
            name="Fonts">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.opendarts.ui.pref.OpenDartsPreferenceInitializer">
      </initializer>
   </extension>
   
</plugin>
