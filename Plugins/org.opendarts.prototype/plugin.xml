<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.opendarts.prototype.ui.application.OpenDartsApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="OpenDarts"
            class="org.opendarts.prototype.ui.perspective.MainPerspective"
            id="opendarts.perspective.main">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="opendarts.cmd.newSet"
            name="New Set">
      </command>
      <command
            id="opendarts.cmd.StartGame"
            name="Start Game">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="opendarts.cmd.newSet"
                  label="New Game..."
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Quit"
                  style="push">
            </command>
         </menu>
         <menu
               label="?">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About ..."
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="opendarts.toolbar.file"
               label="File">
            <command
                  commandId="opendarts.cmd.newSet"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
         </toolbar>
         <toolbar
               id="opendarts.toolbar.game"
               label="Game">
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:openwis.editor.game.toolbar">
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.opendarts.prototype.ui.handler.NewSetHandler"
            commandId="opendarts.cmd.newSet">
      </handler>
      <handler
            class="org.opendarts.prototype.ui.handler.StartGameHandler"
            commandId="opendarts.cmd.StartGame">
         <enabledWhen>
            <with
                  variable="activeEditorId">
               <equals
                     value="opendarts.editor.x01">
               </equals>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.opendarts.prototype.ui.x01.editor.SetX01Editor"
            default="false"
            icon="icons/view/editor.png"
            id="opendarts.editor.x01"
            name="x01 Game">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="opendarts.cmd.newSet"
            icon="icons/actions/add.png">
      </image>
      <image
            commandId="org.eclipse.ui.file.exit"
            icon="icons/actions/quit.png">
      </image>
      <image
            commandId="opendarts.cmd.StartGame"
            icon="icons/actions/start.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="opendarts.cmd.newSet"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+G">
      </key>
      <key
            commandId="opendarts.cmd.StartGame"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+R">
      </key>
   </extension>

</plugin>
