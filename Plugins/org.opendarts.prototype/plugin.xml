<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="icons/app/opendarts_16.png">
         <run
               class="org.opendarts.prototype.ui.application.OpenDartsApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="OpenDarts"
            class="org.opendarts.prototype.ui.perspective.MainPerspective"
            id="opendarts.perspective.main">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="opendarts.cmd.newSet"
            name="New Set">
      </command>
      <command
            id="opendarts.cmd.setInfo"
            name="Set Info">
      </command>
      <command
            id="opendarts.cmd.fullscreen"
            name="FullScreen">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:false"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="opendarts.cmd.newSet"
                  label="New Game..."
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Quit"
                  style="push">
            </command>
         </menu>
         <menu
               label="Options">
            <command
                  commandId="opendarts.cmd.fullscreen"
                  label="Full Screen"
                  style="toggle">
            </command>
         </menu>
         <menu
               label="?">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About ..."
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="opendarts.toolbar.file"
               label="File">
            <command
                  commandId="opendarts.cmd.newSet"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
         </toolbar>
         <toolbar
               id="opendarts.toolbar.game"
               label="Game">
         </toolbar>
         <toolbar
               id="org.opendarts.prototype.toolbar1"
               label="Display">
            <command
                  commandId="opendarts.cmd.fullscreen"
                  label="Full Screen"
                  style="toggle">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:openwis.editor.game.toolbar">
         <command
               commandId="opendarts.cmd.setInfo"
               label="Set Info"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.opendarts.prototype.ui.handler.NewSetHandler"
            commandId="opendarts.cmd.newSet">
      </handler>
      <handler
            class="org.opendarts.prototype.ui.x01.handler.SetInfoHandler"
            commandId="opendarts.cmd.setInfo">
      </handler>
      <handler
            class="org.opendarts.prototype.ui.handler.FullScreenHandler"
            commandId="opendarts.cmd.fullscreen">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.opendarts.prototype.ui.x01.editor.SetX01Editor"
            default="false"
            icon="icons/view/editor.png"
            id="opendarts.editor.x01"
            name="x01 Game">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="opendarts.cmd.newSet"
            icon="icons/actions/add.png">
      </image>
      <image
            commandId="org.eclipse.ui.file.exit"
            icon="icons/actions/quit.png">
      </image>
      <image
            commandId="opendarts.cmd.setInfo"
            icon="icons/actions/info.png">
      </image>
      <image
            commandId="opendarts.cmd.fullscreen"
            icon="icons/actions/fullscreen.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="opendarts.cmd.newSet"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+G">
      </key>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.opendarts.prototype.application"
            name="OpenDarts">
         <property
               name="appName"
               value="OpenDarts">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutImage"
               value="icons/app/about.png">
         </property>
         <property
               name="windowImages"
               value="icons/app/opendarts_16.png,icons/app/opendarts_32.png,icons/app/opendarts_48.png,icons/app/opendarts_64.png,icons/app/opendarts_128.png">
         </property>
         <property
               name="aboutText"
               value="OpenDarts&#x0A;&#x0A;Version: prototype&#x0A;Visit http://github.com/ilaborie/OpenDarts">
         </property>
      </product>
   </extension>
</plugin>
