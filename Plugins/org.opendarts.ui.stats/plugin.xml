<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <perspectiveShortcut
               id="opendarts.perspective.stats">
         </perspectiveShortcut>
         <viewShortcut
               id="opendarts.view.stats">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.opendarts.ui.stats.perspective.StatsPerspective"
            fixed="true"
            icon="icons/view/stats.png"
            id="opendarts.perspective.stats"
            name="Statistics">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="opendarts.category.stats"
            name="Statistics">
      </category>
      <view
            category="opendarts.category.stats"
            class="org.opendarts.ui.stats.view.StatsView"
            icon="icons/view/stats.png"
            id="opendarts.view.stats"
            name="Statistics"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.opendarts.ui.stats.pref.StatsPreferencePage"
            id="opendarts.pref.ui.stats"
            name="Statistics">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.opendarts.ui.stats.pref.StatsPreferenceInitializer">
      </initializer>
   </extension>

</plugin>
